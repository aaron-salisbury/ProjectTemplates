<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApp.Views.SettingsView"
			 Background="Transparent">

	<StackPanel>
		<TextBlock Text="Personalization" FontSize="18" Margin="0,0,0,10" />
		
		<StackPanel Margin="10,0,0,0">
			<TextBlock Text="Choose Theme" FontWeight="Light" />
			<RadioButton GroupName="AppTheme"
						 Click="OnAppThemeRadioClick"
						 Content="Dark"
						 Name="DarkRadioButton"
						 IsChecked="True" />
			<RadioButton GroupName="AppTheme"
						 Click="OnAppThemeRadioClick"
						 Content="Light"
						 Name="LightRadioButton" />
		</StackPanel>
		
	</StackPanel>

</UserControl>
