<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApp.Views.MainView"
             x:DataType="vm:MainViewModel"
			 xmlns:m="clr-namespace:AvaloniaApp.Models"
			 xmlns:v="clr-namespace:AvaloniaApp.Views"
			 xmlns:vm="clr-namespace:AvaloniaApp.ViewModels"
			 xmlns:c="clr-namespace:AvaloniaApp.Base.Controls"
			 xmlns:i="using:Material.Icons.Avalonia">

	<SplitView IsPaneOpen="{Binding IsPaneOpen}" OpenPaneLength="200" DisplayMode="CompactInline" CompactPaneLength="45" PaneBackground="{DynamicResource SystemListLowColor}">

		<SplitView.Pane>
			<Grid RowDefinitions="Auto,*,Auto">
				
				<StackPanel Grid.Row="0" Name="TopPanel" Orientation="Vertical" Spacing="5" HorizontalAlignment="Stretch" VerticalAlignment="Top">
					<Button HorizontalAlignment="Left" Width="32" Height="32" Margin="7, 14, 0, 9" Background="Transparent" Command="{Binding TriggerPaneCommand}">
						<i:MaterialIcon Kind="Menu" />
					</Button>
					<ListBox Margin="0,10,0,0" Padding="0" Background="Transparent" ItemsSource="{Binding PaneItems}" SelectedItem="{Binding SelectedPaneItem}">
						<ListBox.Styles>
							<Style Selector="ListBoxItem">
								<Setter Property="Padding" Value="14 8"></Setter>
							</Style>
						</ListBox.Styles>
						<ListBox.ItemTemplate>
							<DataTemplate DataType="{x:Type m:MenuPaneItemTemplate}">
								<StackPanel Spacing="17" Orientation="Horizontal">
									<i:MaterialIcon Kind="{Binding IconKey}" />
									<TextBlock Text="{Binding Label}" />
								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</StackPanel>

				<Border Grid.Row="1" Name="PanelGap" />

				<StackPanel Grid.Row="2" Name="BottomPanel" Orientation="Vertical">
					<Button HorizontalAlignment="Left" Width="32" Height="32" Margin="7, 0, 0, 10" Background="Transparent" Command="{Binding SettingsCommand}">
						<i:MaterialIcon Kind="CogOutline" />
					</Button>
				</StackPanel>
				
			</Grid>
		</SplitView.Pane>

		<SplitView.Content>
			<Grid RowDefinitions="Auto,*">
				<c:ViewHeaderControl Grid.Row="0" FriendlyPageName="{Binding PageTitle}" />
				<Border Grid.Row="1" Background="{DynamicResource SystemListLowColor}">
					<ContentControl CornerRadius="12,0,0,0" Padding="20" Content="{Binding CurrentPage}" Background="{DynamicResource SystemRegionColor}" />
				</Border>
			</Grid>
		</SplitView.Content>

	</SplitView>
</UserControl>
