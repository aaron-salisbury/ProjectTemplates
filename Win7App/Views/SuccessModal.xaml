<UserControl x:Class="Win7App.Views.SuccessModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Win7App.Views"
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <ContentControl Height="60" Template="{StaticResource SuccessIcon}" Padding="0,0,0,5" />
        <TextBlock Text="Process completed successfully." VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
